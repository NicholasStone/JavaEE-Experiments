<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
        "http://struts.apache.org/dtds/struts-2.5.dtd">

<struts>
    <constant name="struts.enable.DynamicMethodInvocation" value="true"/>
    <constant name="struts.devMode" value="true"/>
    <constant name="struts.action.extension" value="html"/>
    <constant name="struts.i18n.encoding" value="UTF-8"/>
    <constant name="struts.serve.static" value="true"/>
    <package name="index" extends="struts-default" namespace="/">
        <action name="index" class="com.twodogs.action.IndexAction" method="index">
            <result>index.jsp</result>
        </action>
    </package>
    <package name="default" extends="struts-default" namespace="/auth">
        <interceptors>
            <interceptor name="auth-check" class="com.twodogs.interceptor.AuthInterceptor"/>
            <interceptor-stack name="auth">
                <interceptor-ref name="auth-check"/>
                <interceptor-ref name="defaultStack"/>
            </interceptor-stack>
        </interceptors>
        <default-interceptor-ref name="auth"/>
        <global-results>
            <result name="login">login.jsp</result>
        </global-results>
        <action name="auth" class="com.twodogs.action.AuthAction" method="execute">
            <result name="student">/student.jsp</result>
            <result name="instructor">/teacher.jsp</result>
            <result name="input">login.jsp</result>
        </action>
    </package>
</struts>